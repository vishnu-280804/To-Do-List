<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To Do List</title>
    <link rel="stylesheet" href="style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div>
        <a href="index.html" align="center">To-Do List</a>
    </div>
    <div class="container">
        <div class="left">
            <div class="menu">
                <h2>Tasks</h2>
                <input type="text" placeholder="Search" id="inputLeft">
            </div>
            <br><br><br><br><br>
            <div class="task-list"></div> <!-- Container for tasks -->
        </div>
        <div class="right">
            <div class="header">
                <div class="flexcontainer">
                    <h1>Add The Tasks</h1>
                    <p id="count">No of Tasks: 0</p> <!-- Initialize count -->
                </div>
            </div>
            <br><br><br>
            <div class="flexy">
                <div class="add-tasks">
                    <input type="text" placeholder="Add Tasks" class="inputs">
                </div>
                <div class="add-icon">
                    <i class="fa-solid fa-plus hello"></i>
                </div>
            </div>
        </div>
    </div>
    <script src="/script.js"></script> <!-- Ensure this path is correct -->
</body>
</html>
